<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Delete Venue</title>
    <link href="/Content/css/bootstrap.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Copse" rel="stylesheet">
    <link href="/Content/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/bands">View All Bands</a></li>
          <li><a href="/venues">View All Venues</a></li>
        </ul>
      </div>
    </nav>
    <div class="container text-center">
      <h2>Are you sure you want to delete this Venue?</h2>
      <h4>@Model.GetName()</h4>
      <form action="/venue/delete/@Model.GetId()" method="post">
        <div class="form-group">
          <input class="form-control" type="hidden" name="_method" value="DELETE">
        </div>
        <button type="submit" class="btn btn-danger">Delete Venue</button>
      </form>
    </div>
  </body>
</html>
