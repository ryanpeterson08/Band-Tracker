<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Venues</title>
    <link href="/Content/css/bootstrap.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Copse" rel="stylesheet">
    <link href="/Content/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <ul class="nav navbar-nav">
          <li><a href="/">Home</a></li>
          <li><a href="/venue/new">Add a new Venue!</a></li>
        </ul>
      </div>
    </nav>
    <div class="container text-center">
      @if(@Model.Count != 0)
      {
        <ul>
        @foreach(var venue in Model)
        {
          <li><a href="/venue/@venue.GetId()">@venue.GetName() | <a href="/venue/delete/@venue.GetId()">Delete this Venue</a> | <a href="/venue/edit/@venue.GetId()">Edit this venue</a></li>

        }
      </ul>
      }
      else
      {
        <h4>There are no venues added yet - click the link below to add a venue!</h4>
      }
    </div>
  </body>
</html>
